<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#4D61DA"
        android:gravity="center"
        android:text="登录"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="用户名"
        android:inputType="textPersonName">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="登录"
        android:layout_below="@+id/checkBox1"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_alignStart="@+id/checkBox1"
        android:layout_marginTop="36dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_alignRight="@+id/et_username"
        android:onClick="doClick"
        android:text="注册" />

    <TextView
        android:text="7234"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/customtextview"
        android:layout_below="@+id/et_password"
        android:layout_toRightOf="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否保存登录记录"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/yanzhengma"
        android:layout_alignStart="@+id/yanzhengma" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:maxLength="4"
        android:hint="验证码"
        android:id="@+id/yanzhengma"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/customtextview"
        android:layout_toLeftOf="@+id/btn_register"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

</RelativeLayout><!-- From: file:/F:/PersonalProjectWorkSpace/kuaicha/app/src/main/res/layout/activity_main.xml -->